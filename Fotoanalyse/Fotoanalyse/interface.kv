<StartScreen>:

	name: 'Start'

<TakingPicturesScreen>:

	name: 'TakingPictures'
	on_enter: root.StartTakingPictures()

	BoxLayout:
		size: root.size
		pos: root.pos

		Button:
			background_color: 0.5, 0.5, 0.5, 1
			on_press: root.StopTakingPictures()
			on_release: app.root.current = 'Calculating'
			text: 'Stop taking pictures'
			font_size: 25
			
<CalculationScreen>:
	name: 'Calculating'
	on_enter: root.CaculateResults()

	GridLayout:
		cols: 1
        orientation: 'horizontal'

		Label:
			text: 'calculating...'

<ResultScreen>:

	name: 'Results'	

<ShowPercentages>:

	name: 'ShowPercentages'
	orientation: 'vertical'
	spacing: 1

<ConfigurationScreen>:

	name : 'Configuration'

<ConfigurationScreenLayout>:

	name: 'ConfigurationLayout'
	


  

















